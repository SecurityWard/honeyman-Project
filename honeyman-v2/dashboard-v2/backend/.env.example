# Honeyman V2 Dashboard Backend - Environment Variables

# Application
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
DEBUG=false
APP_NAME=Honeyman Dashboard API
APP_VERSION=2.0.0

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://dashboard.honeyman.io

# Database (PostgreSQL + TimescaleDB)
DATABASE_URL=postgresql+asyncpg://honeyman:your-db-password@localhost:5432/honeyman_v2
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# MQTT Broker
MQTT_BROKER_HOST=mqtt.honeyman.io
MQTT_BROKER_PORT=8883
MQTT_BROKER_USERNAME=dashboard
MQTT_BROKER_PASSWORD=your-mqtt-password
MQTT_USE_TLS=true
MQTT_CA_CERT=/path/to/ca.crt

# MQTT Topics
MQTT_TOPIC_THREATS=honeyman/sensors/+/threats
MQTT_TOPIC_HEARTBEAT=honeyman/sensors/+/heartbeat
MQTT_TOPIC_CONTROL=honeyman/control/#

# Data Retention
DATA_RETENTION_DAYS=90
CLEANUP_INTERVAL_HOURS=24

# Geolocation APIs (optional)
GOOGLE_GEOLOCATION_API_KEY=
IP_GEOLOCATION_API_KEY=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# WebSocket
WS_HEARTBEAT_INTERVAL=30

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30
ALGORITHM=HS256
